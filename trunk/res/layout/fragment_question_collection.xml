<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    
    <ImageView
        android:id="@+id/bar_single_question"
        android:src="@drawable/single_info_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ImageView>
    
        <TextView 
        android:id="@+id/txt_question_count"
        android:text="문제 수  0/0"
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        />
        

    
        <TextView 
        android:id="@+id/txt_time"
        android:text="0:00"
        android:layout_alignParentRight="true"
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        />
        
                <ImageView
        android:id="@+id/img_time"
        android:src="@drawable/icon_time"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/txt_time"
        android:layout_marginRight="60dp">
    </ImageView>
    
    <ImageView
        android:id="@+id/question"
        android:src="@drawable/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bar_single_question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    
        <TextView 
        android:id="@+id/txt_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bar_single_question"
        android:layout_marginTop="100dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="30sp"/>
    
    <ImageView
        android:id="@+id/answer"
        android:src="@drawable/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    
        <EditText 
        android:id="@+id/edt_answer"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/question"
        android:layout_marginTop="25dp"
        android:background="#00000000"
        android:gravity="center"
        android:textSize="30sp"
        android:inputType="number"/>
    
    
    <Button
        android:id="@+id/btn_submit"
        android:background="@drawable/button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    
    
    

</RelativeLayout>
